#!/bin/bash

# plug
SAVE_DIR="${HOME}/Pictures/Screenshots"

scrot '%Y-%m-%d-%T-screenshot.png' -e 'mv $f ~/Pictures/Screenshots'
notify-send -i "SCROT" -u low "Ôùå" "<span size='small'><u>Pictures/Screenshots</u></span>\nChissu! Take Screenshot"

# Create directory if needed
if [ ! -d "$SAVE_DIR" ]; then
    mkdir -p "$SAVE_DIR"
fi
