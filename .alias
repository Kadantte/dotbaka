#!/bin/fish/alias

# alias for xbps
alias q="exit"
alias c="clear"
alias gc="git clone"
alias pg="ping 8.8.8.8"
alias pc="ping 1.1.1.1"
alias xd="sudo xdowngrade"
alias xquery="xbps-query -s"
alias deps-x="xbps-query -x"
alias gr-h="git reset --hard"
alias off-sys="loginctl poweroff"
alias reboot-sys="loginctl reboot"
alias sleep-sys="loginctl suspend"
alias rm-pkg="sudo xbps-remove -R"
alias xi-pkg="sudo xbps-install -S"
alias rmx-app="sudo xbps-remove -O"
alias update="sudo xbps-install -Su"
alias make-ssh="bash ~/.scripts/ssh"
alias rmx-o="sudo xbps-remove --remove-orphans"
alias ncmpcpp="bash ~/.ncmpcpp/ncmpcpp-ueberzug/ncmpcpp-ueberzug"
alias xi-pkg-free="sudo xbps-install --repository=hostdir/binpkgs"
alias xi-pkg-nonfree="sudo xbps-install --repository=hostdir/binpkgs/nonfree"
