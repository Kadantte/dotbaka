#!/bin/bash
# Bash Menu Script Installasion Depedency and fish shell

# Banner
echo -e ""
echo -e "         dBBBBb  dBBBBP dBBBBBBP dBBBBb dBBBBBb     dBP dBP dBBBBBb
            dB' dBP.BP    dBp       dBP      BB    d8P.dBP       BB
       dBP dB' dBP.BP    dBP    dBBBK'   dBP BB   dBBBBP     dBP BB
      dBP dB' dBP.BP    dBP    dB' db   dBP  BB  dBP BB     dBP  BB
     dBBBBB' dBBBBP    dBP    dBBBBP'  dBBBBBBB dBP dBP    dBBBBBBB"
echo -e ""
echo -e "      Script For Installasion Depedency And Some Stuff Â© @vcyzteen"
echo -e ""

PS3='Please enter your choice: '
options=("Install Depedency [ Void Linux ]" "Install Depedency [ Artix Linux ]" "Swicth Shell [ All GNU-Linux ]" "Change hosts file to bebasid" "Remove Unused File" "Exit" )
select opt in "${options[@]}"
do
    case $opt in
        "Install Depedency [ Void Linux ]")
            sudo xbps-install -Su xorg xorg-server bspwm sxhkd ncmpcpp feh cava mpd mpc \
            fish-shell xsettingsd dunst mpv neofetch neovim Thunar rofi viewnior xfce4-power-manager \
            pcmanfm tint2 ranger fontconfig rsync wget curl w3m w3m-img ImageMagick pamixer pavucontrol \
            scrot polkit xfce-polkit xdg-user-dirs youtube-dl alacritty screenkey
            echo "----------------------------"
            echo " install depedency finished "
            echo "----------------------------"
            ;;
        "Install Depedency [ Artix Linux ]")
            sudo pacman -S xorg xorg-server bspwm sxhkd ncmpcpp feh cava mpd mpc \
            fish xsettingsd dunst mpv neofetch neovim thunar rofi viewnior xfce4-power-manager \
            pcmanfm tint2 ranger fontconfig rsync wget curl w3m w3m-img imagemagick pamixer pavucontrol \
            scrot polkit xfce-polkit xdg-user-dirs youtube-dl alacritty screenkey
            echo "----------------------------"
            echo " install depedency finished "
            echo "----------------------------"
            ;;
        "Swicth Shell [ All GNU-Linux ]")
            sudo chsh -s /usr/bin/fish
            echo "----------------------------"
            echo " swicth shell fish finished "
            echo "----------------------------"
            ;;
	"Change hosts file to bebasid")
	    sudo mv hosts /etc/hosts
	    echo "----------------------------"
            echo " Change hosts file finished "
            echo "----------------------------"
	    ;;
        "Remove Unused File")
            rm -rf ${HOME}/preinstalled && rm -rf ${HOME}/readme.md && rm -rf ${HOME}/LICENCE
            echo "-----------------------------"
            echo " remove unused file finished "
            echo "-----------------------------"
            ;;
        "Exit")
            exit 0
            ;;
        *) echo "Invalid Selection $REPLY";;
    esac
  break
done
